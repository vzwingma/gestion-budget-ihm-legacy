	<repositories>
		<repository>
			<id>vaadin-addons</id>
			<url>http://maven.vaadin.com/vaadin-addons</url>
		</repository>
		<repository>
			<id>m2</id>
			<url>https://repo.maven.apache.org/maven2/</url>
		</repository>
